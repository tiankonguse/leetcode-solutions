{
    "tasks": [
        {
            "label": "Open Terminal",
            "type": "shell",
            "command": "osascript -e 'tell application \"Terminal\"\ndo script \"echo hello\"\nend tell'",
            "problemMatcher": []
        },
        {
            "label": "mac-cpp",
            "type": "shell",
            "command": "/usr/bin/g++", // The command to be executed. Can be an external program or a shell command.
            "args": [
                "-g",
                "${file}",
                "-I${workspaceFolder}/include/",
                "-DUSACO_LOCAL_JUDGE",
                "-o",
                "${workspaceFolder}/tmp/tmp.exe",
                "-std=c++17"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [ // The problem matcher(s) to use. Can either be a string or a problem matcher definition or an array of strings and problem matchers.
                "$gcc"
            ],
            "group": { // Defines to which execution group this task belongs to. It supports "build" to add it to the build group and "test" to add it to the test group.
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true, // Controls whether the executed command is echoed to the panel. Default is true.
                "reveal": "always", // Controls whether the terminal running the task is revealed or not. May be overridden by option "revealProblems". Default is "always".
                "focus": false, // Controls whether the panel takes focus. Default is false. If set to true the panel is revealed as well.
                "showReuseMessage": true, // Controls whether to show the `Terminal will be reused by tasks, press any key to close it` message.
                "clear": true, // Controls whether the terminal is cleared before executing the task.
                "panel": "shared" //Controls if the panel is shared between tasks, dedicated to this task or a new one is created on every run.
            }
        },
        {
            "label": "win10-compile-cpp",
            "type": "shell",
            "command": "g++.exe",
            "args": [
                "-g",
                "${file}",
                "-I./include/",
                "-o",
                "tmp/tmp.exe"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "showReuseMessage": true,
                "clear": true,
                "panel": "shared"
            }
        },
        {
            "label": "win7-compile-cpp",
            "type": "shell",
            "command": "D:\\mingw64\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-I./include/",
                "-o",
                "${workspaceFolder}/tmp.exe"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "showReuseMessage": true,
                "clear": true,
                "panel": "shared"
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I${workspaceFolder}/include/",
                "-DUSACO_LOCAL_JUDGE",
                "${file}",
                "-o",
                "${workspaceFolder}/tmp/tmp.exe",
                "-std=c++17"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}