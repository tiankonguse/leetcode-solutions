{
    "tasks": [
        {
            "label": "Open Terminal",
            "type": "shell",
            "command": "osascript -e 'tell application \"Terminal\"\ndo script \"echo hello\"\nend tell'",
            "problemMatcher": []
        },
        {
            "label": "mac-cpp",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-I${workspaceFolder}/include/",
                "-DUSACO_LOCAL_JUDGE",
                "-o",
                "${workspaceFolder}/tmp/tmp.exe",
                "-std=c++17"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "showReuseMessage": true,
                "clear": true,
                "panel": "shared"
            }
        },
        {
            "label": "win10-compile-cpp",
            "type": "shell",
            "command": "g++.exe",
            "args": [
                "-g",
                "${file}",
                "-I./include/",
                "-o",
                "tmp/tmp.exe"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "showReuseMessage": true,
                "clear": true,
                "panel": "shared"
            }
        },
        {
            "label": "win7-compile-cpp",
            "type": "shell",
            "command": "D:\\mingw64\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-I./include/",
                "-o",
                "${workspaceFolder}/tmp.exe"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "showReuseMessage": true,
                "clear": true,
                "panel": "shared"
            }
        },
        {
            "label": "C/C++: g++ build active file",
            "type": "cppbuild",
            "command": "/usr/bin/clang++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I${workspaceFolder}/include/",
                "-DUSACO_LOCAL_JUDGE",
                "${file}",
                "-o",
                "${workspaceFolder}/tmp/tmp.exe",
                "-std=c++17"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "mac-build-home-2",
            "type": "shell",
            "command": "/usr/local/bin/g++-14",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I${workspaceFolder}/include/",
                "-DUSACO_LOCAL_JUDGE",
                "${file}",
                "-o",
                "${workspaceFolder}/tmp/tmp.exe",
                "-std=c++20",
            ],
            "options": {
                "cwd": "${fileDirname}", // The current working directory of the executed program or script. If omitted Code's current workspace root is used.
            },
            "problemMatcher": [
                "$gcc",
            ],
            "group": {
                "kind": "build",
                "isDefault": true, // Defines if this task is the default task in the group, or a glob to match the file which should trigger this task.
            },
            "presentation": {
                "echo": true, // Controls whether the executed command is echoed to the panel. Default is true.
                "reveal": "always", // Controls whether the terminal running the task is revealed or not. Default is "always".
                "focus": false, // Controls whether the panel takes focus. Default is false. If set to true the panel is revealed as well.
                "showReuseMessage": true, // Controls whether to show the `Terminal will be reused by tasks, press any key to close it` message.
                "clear": true, // Controls whether the terminal is cleared before executing the task.
                "panel": "shared", // Controls if the panel is shared between tasks, dedicated to this task or a new one is created on every run.
            },
            // "detail": "compiler: /usr/local/bin/g++-14" // An optional description of a task that shows in the Run Task quick pick as a detail.
        }
    ],
    "version": "2.0.0"
}